page {
  background-color: #dedede;
  padding: 20rpx;
}
.search_row {
  height: 60rpx;
  display: flex;
}
.search_row input {
  background-color: #fff;
  flex: 1;
  height: 100%;
  padding-left: 30rpx;
}
.search_row button {
  width: 110rpx;
  height: 100%;
  padding: 0;
  margin: 0 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
}
.search_content {
  margin-top: 30rpx;
  display: flex;
}

.search_content .other .cart_img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search_content .other .cart_img_wrap .image{
  width: 300rpx;
  border: 1rpx solid var(--themeColor);
}
image{
  width: 50vw;
}
.search_content .other .cart_info_wrap {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.search_content .other .cart_info_wrap .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
  font-size: 32rpx;
  font-weight: 600;
}
.search_content .other .cart_info_wrap .goods_price_wrap {
  display: flex;
  justify-content: space-between;
}
.search_content .other .cart_info_wrap .goods_price_wrap .goods_price {
  color: var(--themeColor);
  font-size: 36rpx;
}
.other{
  width: 100vw;
  display: flex;
}